@import 'colors.styl'

.innerHeaderBrand
	height 180px
	box-shadow inset 0 17px 23px -22px white
	background-color black
	width 100vw
	position fixed
	top 52px
	left 0
	z-index 100
	padding-top 32px
	border-bottom 1px solid white
	
	.headerBrandImg
		margin 0 auto
		background-size 74%
		height 115px
		width 135px
		
.mainCatBrandCont
	&.garage
		background-color $garageBack
		
.galleryHead
	height 40px
	background-color white
	box-shadow inset 29vw 0px 75px -10px black, inset -29vw 10px 75px -10px black
	border-bottom 3.5px solid $regActiveBtn
	
.galleryNeck
	height 20px
	background-color #4b4848
	border-bottom 2px solid white
	display flex
	box-sizing content-box
	
	.gallNeckCarSp
		height 20px
		width 40px
		display block
		background-color black
		
	.gallNeckCarTxt
		margin-left 20px
		color white
		font-size 13px
		
.modelItem
	&:hover
		.hoverInfo
			visibility visible
			background-color rgba(150, 150, 150, .3)
			color white
	
	.hoverInfo
		visibility hidden
	