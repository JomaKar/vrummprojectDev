@import 'colors'

.hambur
	color white

.p-header
	position relative

	.p-headerBackImg
		background-image url('http://images.mazdamexico.com.mx/MusaWeb/mexico3/img/vlp/panels/M3H/exteriorView/RojoBrillante/Negro/img_vlp_360_Mazda3_5dr_Negro_Rojo_Brillante_01.jpg');
		height 350px
		position relative
		color #fff
		background-position top center
		box-shadow inset 0 -60px 75px 26px black, inset 21vw 0 122px -29px black, inset -19vw 0 129px -24px black
	
	.p-profileInfoCont
		position relative
		
		.p-profilePhoto
			background-image url('/img/profileDafault.png')
			z-index 1
			border-radius 4px
			
		.p-profileInfo
			color white
			
			.profileName
				color $regActiveBtn
				font-size small
				margin 0
			
			.profileAlias
				font-size smaller	
			
			.cameraIconHead
				position absolute
				right 16px
				font-size 1.5em
				cursor pointer
				top 16%
				color rgba(225, 225, 225, 0.4)
			
			
	.p-profActDetCont
		position relative
		
		.garagaInfoDetails
			background-color black
			box-shadow inset 0 10px 20px -10px white
			color white
			padding-top 3.5%

			.garageCarsCounter, .garageShareCounter
				display flex
				flex-wrap wrap-reverse
				
			.membershipDateCounter
				text-align right	

.garageFilterBar
	height 40px
	background-color $redirectBox
	
	.garageFilterRow
		.filterBar
			height 40px
			text-align right
			
			.shareGarageIcon
				width 36px
				height 35px
				padding-top 5px
				color white
				border-right 1.5px solid gray
				font-size 26px
				text-align left
			
			.filterDivCont
				height 100%
				width 180px
				float right
				padding 5px 20px
				text-align center
				
				#filterSelect
					width 160px
					height 30px
					border-radius 2px
					border 1px solid white
					color white
					appearance none
					-webkit-appearance none
					-moz-appearance none
					background-color $redirectBox
					padding-left 7px
					
				.selectCaret
					position absolute
					right 20px
					top 13px
					color white
					
@media(min-width 768px)
	.garageFilterBar
		
		.garageFilterRow
			.filterBar
				
				.filterDivCont
					text-align right
						
					.selectCaret
						right 10px
							

.carsCountTxt, .sharedCountTxt, .membershipCountTxt
	color $regTextColor
	font-size 9px

.membershipCountTxt
	position relative
	top -7px

.memDateNumb
	font-size 11px

.carsNumb, .shareNumb
	color white
	font-size 14px
	
.garageGridCont
	padding-bottom 1px !important	
	
.garageImgCont
	.sideInfoBar
		position absolute
		display flex
		flex-wrap wrap
		width 11%
		min-width 36px
		height auto
		background-color rgba(26, 26, 26, 0.5)
		text-align center
		color white
		fill white
		flex-direction column
		
		.userCarCatCont
			width 100%
			height 28px
			background-color black
			padding-top 3px
			cursor pointer
			
			.selectionContainer
				width 36px
				display flex
				background-color black
				margin 0 auto
				
				.selectedCat
					width 36px
					height 25px
					cursor pointer
					
				.notSelectedCat
					width 72px
					display none	
		
		.toggleableIcons
			height 83%
			display none
			justify-content space-around
			flex-direction column
			
			.compareGroup
				width 20px
				margin 0 auto
				height 24px
				position relative
				cursor pointer
				
				.right, .left, .circle
					position absolute
					
				.right
					left 3px
					top 0
				.left
					right 5px
					top 6px
				.circle
					top 10px
					right 0px
					
				.message
					display none
					position absolute
					font-size 12px
					background-color $carHoverMsg
					padding 2px 5px
					border 0.5px solid $carHoverMsgBrd
					border-radius 8px
					left 129%
					top -4px
					
				&:hover
					.message
						display block
					
			.shareGroup
				margin 0 auto
				width 20px
				height 24px
				position relative
				cursor pointer
				
				.arUp
					position absolute
					right 7px
					
				.sqEmp
					position absolute
					bottom 4px
					right 4.5px
					
				.message
					display none
					position absolute
					font-size 12px
					background-color $carHoverMsg
					padding 2px 5px
					border 0.5px solid $carHoverMsgBrd
					border-radius 8px
					left 129%
					top 0
					
				&:hover
					.message
						display block
					
			.toggleTrashGrp
				width 20px
				height 24px
				margin 0 auto
				position relative
				font-size 16px
				cursor pointer
				
				.trash
					position absolute
					bottom 0
					left 19%
				
				.message
					display none
					position absolute
					font-size 12px
					background-color $carHoverMsg
					padding 2px 5px
					border 0.5px solid $carHoverMsgBrd
					border-radius 8px
					left 129%
					top 5px
					
				&:hover
					.message
						display block
					
		.dots
			margin-top 5px
			cursor pointer	
						
			
	.garageImg
		width 100%
	
.calendarGroup
	color aqua
	fill aqua
	cursor pointer
	width 36px
	height 25px

.heartGroup
	width 36px
	height 25px
	color red
	fill red
	cursor pointer

.soonGroup
	color orange
	fill orange
	position relative
	width 36px
	height 25px
	cursor pointer
	
	.horArr
		font-size 7px
		position absolute
		top 5.7px
		left 17px
	
	.verArr
		font-size 6px
		position absolute
		top 4px
		left 17px
	
	.repeat
		transform rotate(216deg)
		font-size 17px 
		

@media(min-width 400px)
	.carsCountTxt, .sharedCountTxt, .membershipCountTxt
		margin-left 5px
		
	.p-header
		.p-profileInfoCont	
			.p-profileInfo
				.profileName
					font-size 18px
					
				.profileAlias
					font-size 14px	

@media(min-width 500px)
	.p-header
		.p-profActDetCont
			.garagaInfoDetails
				padding-top 2.5%


@media(min-width 630px)		
	.p-header
		.p-profileInfoCont	
			.p-profileInfo
				.profileName
					font-size 18px
					margin 8px 0
					
				.cameraIconHead
					font-size 2em
					top 23%

	.memDateNumb
		font-size 14px

	.carsCountTxt, .sharedCountTxt, .membershipCountTxt
		font-size 11px
		


@media(min-width 730px)
	.carsCountTxt, .sharedCountTxt, .membershipCountTxt
		margin-left 10px
		

@media(min-width 992px)
	.p-header
		.p-headerBackImg
			height 400px
			background-position left
			

@media(min-width 1100px)
	.p-header
		.p-profileInfoCont	
			.p-profileInfo
				.profileName
					margin-top 25px
