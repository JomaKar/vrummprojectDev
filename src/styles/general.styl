.dblrightP
	padding-right 30px !important

.NotopP
	padding-top 0 !important
.NobottomP
	padding-bottom 0 !important			

.noMargin
	margin-left 0px !important
	margin-right 0px !important
	margin-top 0px !important
	margin-bottom 0px !important
.NoleftM
	margin-left 0px !important
	&.halfMR
		margin-right 7.5px
.NorightM
	margin-right 0px !important
	&.halfML
		margin-left 7.5px
.NobottomM
	margin-bottom 0px !important
.NotopM
	margin-top 0px !important		
		
.childHeight
	overflow auto	
	

.backImg
	background-size cover
	background-position top left
	background-clip content-box
	&.circ
		boder-radius 50%
		
	&.backSz
		background-size 85%
		background-repeat no-repeat
	
	&.centerBackImg
		background-position center	

.regInputs
	color white
	padding-left 12px
	padding-right 12px
	font-size 12px
	text-align left
		
.mainFooter
	background-color black



@media(min-width 1200px)
	.col-xs-12
		&.noMoreGrow
			width 792px !important
			margin 0 auto !important
			float none !important
			
	.row-fluid
		&.noMoreGrow
			width 792px !important
			margin 0 auto !important
			float none !important
			
			&.initialForms
				width 1164px !important
				
.breadCrum
	width 100%
	position absolute
	z-index 1
	top 7px
	display flex
	
	.breadTab
		padding 1px 9px 1px 12px
		background-color $regBrd
		display block
		text-align center
		border 1.5px solid red
		border-left hidden
		border-right hidden
		box-sizing border-box
		position relative
		cursor pointer
		text-decoration none
		
		&:last-of-type
			cursor default
		
		.textSpan
			color whitesmoke
		
		.triangleSpan
			width 16.8px
			height 16.8px
			background-color $regBrd
			border-right 1px solid red
			border-radius 0 0 0 27px
			border-top 1px solid red
			display block
			position absolute
			top 2.5px
			transform rotate(46deg)
			right -8px
			z-index 2
			
		&:hover
			background-color $grayVersionsInfo
			
			.triangleSpan
				background-color $grayVersionsInfo
				
			&:last-of-type
				background-color $regBrd
				
				.triangleSpan
					background-color $regBrd
				
				

			
		