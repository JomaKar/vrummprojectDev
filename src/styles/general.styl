@import 'colors.styl'

body
	margin 0 auto !important
	font-family Roboto sans-serif
	padding 0px
	
	.container-fluid
		&.login,  &.registro
			margin-top 70px
		
		&.conNav
			margin-top 40px
		
		&.conInnerHead
			margin-top 191px

.grayColor
	color $grayNoColor !important
	fill $grayNoColor !important
	
.hiddenItm
	display none !important
	
.noMxWidth
	max-width none !important
	
.noBrd
	border hidden !important
	
.btmBrd
	border-bottom 1px solid
	
.aquaColor
	color $regActiveBtn !important
	
.defaultPointer
	cursor default !important

button.shareVrumm
	padding 10px 15px
	color whitesmoke
	background-color transparent
	border hidden
	
	&:focus
		border hidden

.myNavBar
	position fixed !important
	top 0
	left 0
	z-index 10
	width 100vw
	height 40px !important
	min-height 40px !important
	box-sizing content-box
	background-color $navbarBack !important
	
	&.downBrd
		border-bottom 1px solid
	
	&.noBacKBtn
		div
			.navbarBackBtn
				display none
				
	&.withSuperTop
		div
			#navbar
				top -11px
				
	&.noPhoto
		div
			#navbar
				.navMenuList
					li
						&.profileNavLinkCont
							display none
	
	div
		.navbarBackBtn
			position absolute
			left 12px
			top 8px
			font-size 22px
			cursor pointer
			color $regActiveBtn

		.navbar-header
			height 40px
			margin-left 45px
			
			button.navbar-toggle
				margin-bottom 0
				margin-top 2px

		
		#navbar
			background-color $navbarBack
			width 100%
			margin-top 0
			position relative
			top -1px
			
			&.superTop
				top -11px
			
			.navMenuList
				
				li 
					height 40px !important
					
					a 
						height 39px !important
						line-height 10px !important
						font-size 14px
						cursor pointer
						
						&.profileNavLink
							padding-top 4px
							padding-bottom 0
							display flex
							
							span
								margin-top 8px
								
								&:last-of-type
									margin-right 9px

							.minProfileImg
								height 30px
								width 30px
						
					&:last-of-type
						a
							border-right hidden
							
					
							
@media(min-width 768px)
	button.shareVrumm
		padding 0
		
	.myNavBar
		div
			.navbarBackBtn
				left -40px
				
			.navbar-header
				margin-left 0px
				
			#navbar
				position initial
				
				.navMenuList
					position absolute
					right 10px
					
					.menuItmSign
						margin-top 15px
						font-size 14px
						color white
						transform scale(1.2, 1.8)
						display none
						
					li
						&.dropdown
							&.open
								margin-left 33px
								
								&.inside
									margin-left 42px
								
								.hidedMenu
									margin 2px 0 0 -36px !important
									cursor pointer
									background-color black
									border 1px solid
									border-bottom hidden
									position absolute
									z-index 10
									height 40px
									
									.onExp
										display block
										color white
										font-size 18px
										display inline-block
										
									.onColl
										display none
											
								.navSMenuList
									display block
									position absolute
									right 0
									top 41px
									background-color black
									border 1px solid
									z-index 8
									padding-top 16px
									width 162px
									box-sizing border-box
									list-style none
									padding-left  17px
										
									li
										&.disabled
											cursor not-allowed
											a
												color $grayVersionsInfo
												text-decoration none
												
												&:hover
													cursor not-allowed
										a
											color whitesmoke
											text-decoration none
											
											&:hover
												color $regTextColor
												cursor pointer
							
							&.inside
								.hidedMenu
									margin-left 5px

							.hidedMenu
								display block !important
								border 1px solid
								padding 8px
								height 35px
								z-index auto
								margin-top 2px
								background-color black
									
								.onExp
									display none
									
								.onColl
									display block
									color white
									font-size 18px
										
							.navSMenuList
								display none

						a
							border-right 1px solid white
			
