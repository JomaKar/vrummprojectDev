	background-image url('../img/h_logo-l.png')
	width 100px
	height 40px
	background-size 100% !important
	background-repeat no-repeat 
	background-position center !important
	margin-left 0px	

.form-control
	&.myFormContr
		background-color transparent
		border hidden

