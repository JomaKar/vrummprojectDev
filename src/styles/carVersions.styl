@import 'colors.styl'

.versionsCarousel
	position relative
	.thumbImgsCont
		position absolute
		bottom 5%
		width 60%
		left 20%
		display flex
		justify-content center
		overflow scroll
		
		.carThumbImgUnit
			width 16%
			margin auto 0
			cursor pointer
			
			.carThumb
				filter grayscale(1)
					
				&.active
					border 2.5px solid $regActiveBtn
					filter grayscale(0)

	.arrowsCont
		padding 0 2%
		display flex
		justify-content space-between
		font-size 26px
		margin-top  26%
		
		.leftArr, .rightArr
			cursor pointer

.versionsInfoCont
	background-color black

.modelHeader
	box-shadow inset 0 15px 15px -15px white
	height 130px
	
	.modelHeaderRow
		padding-top 23px
		border-bottom 1px solid $carHoverMsg
		
		.versionsBrandImg
			background-size 95px
			margin auto 0
			height 107px
			background-position top
			background-repeat no-repeat
			
		.modelDetail
			margin auto 0
			display flex
			justify-content space-between
			
			.mInfoDetail
				width 100%
				
				.modelName
					color white
					font-size 16px
					text-align left
				
				.modelPrice
					color $regTextColor
					font-size 13px
					text-align left
				
				.shareLogo
					margin auto 0
					font-size 20px
					text-align right	



.versionDetailRow
	padding 13px 0
	position relative
	box-shadow inset 0 -18px 68px -15px $carHoverMsg

	.versionImg 
		filter grayscale(1)

	.versionDetail
		font-size 14px
		display flex
		justify-content space-between
		margin-top 4%
		color $regActiveBtn
		
		.versionPrice
			color $regTextColor
	
	.goToDetailArrow
		font-size 12px	
		margin-top 4%
		justify-content center
		display flex
		
	&.active
		padding-left 1px
		border-left 3px solid $regActiveBtn
		
		.versionImg 
			filter grayscale(0)

		.versionDetail
			color white
			
			.versionPrice
				color white
		
		.goToDetailArrow
			color $regActiveBtn
		


@media(min-width 768px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 80px
				
	.versionDetailRow
		.versionDetail
			margin-top 2%
			font-size 16px
		
		.goToDetailArrow
			margin-top 2%
			font-size 18px
			
		&.active
			padding-left 5px
					
			
@media(min-width 1100px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 90px
