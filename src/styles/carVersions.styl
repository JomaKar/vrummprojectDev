@import 'colors.styl'

.versionsCarousel
	position relative
	background-repeat no-repeat
	background-position top center
	background-size 100%
	background-color $regBrd
	
	&.autos
		background-position center
	
	.thumbImgsBar
		position absolute
		width 100%
		height 85px
		bottom 0
		background-color black
		
		.thumbImgsCont
			position absolute
			bottom 23%
			width 60%
			left 20%
			display flex
			justify-content center
			overflow-x auto
			overflow-y hidden
			
			.carThumbImgUnit
				width 16%
				margin auto 0
				cursor pointer
				flex-shrink 0
				
				.carThumb
					filter grayscale(1)
						
					&.active
						border 2.5px solid $regActiveBtn
						filter grayscale(0)

	.arrowsCont
		padding 0 2%
		display flex
		justify-content space-between
		font-size 26px
		margin-top  26%
		
		.leftArr, .rightArr
			cursor pointer
			

@media(min-width 768px)
	.versionsCarousel
		.arrowsCont
			width 120%
			margin-left -10%

.versionsInfoCont
	background-color black

.modelHeader
	box-shadow inset 0 15px 15px -15px white
	height 130px
	
	.modelHeaderRow
		padding-top 23px
		border-bottom 1px solid $brandRowBrd
		
		.versionsBrandImg
			background-size 46px
			margin auto 0
			height 107px
			background-position top
			background-repeat no-repeat
			
		.modelDetail
			margin auto 0
			height 78px
			
			.mInfoDetail
				width 100%
				display flex
				justify-content space-between
				flex-direction column
				height 100%
				
				.modelName
					color white
					font-size 16px
					text-align left
				
				.modelPrice
					color $regTextColor
					font-size 14px
					text-align left
					
				.versionName
					font-size 16px
					color $regActiveBtn
					text-align left
					margin-top 10px
				
				.shareLogo
					margin auto 0
					font-size 20px
					text-align right
					padding-right 0px
					height 10px
					position relative
					
					&.versions
						svg
							top -12px
					
					span, svg
						cursor pointer
						position absolute
						
					svg
						right -20px
					

.versionDetailRow
	padding 13px 0
	position relative
	box-shadow inset 0 -18px 68px -15px $carHoverMsg

	.versionImg 
		filter grayscale(1)

	.versionDetail
		font-size 12px
		display flex
		justify-content space-between
		margin-top 1%
		color $regActiveBtn
		padding 0 !important
		
		.versionPrice
			color $grayVersionsInfo
	
	.goToDetailArrow
		font-size 12px	
		margin-top 1%
		justify-content center
		display flex
		cursor pointer
		
		.goToDetailAnchor
			color inherit
			
			&:hover
				color inherit
		
	&.active
		padding-left 1px
		border-left 3px solid $regActiveBtn
		
		.versionImg 
			filter grayscale(0)

		.versionDetail
			color white
			
			.versionPrice
				color white
		
		.goToDetailArrow
			color $regActiveBtn
			
			.goToDetailAnchor
				color inherit
				
				&:hover
					color inherit
		
@media(min-width 370px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 60px
				
	.versionDetailRow
		.versionDetail
			margin-top 2%
			font-size 13px

		.goToDetailArrow
			margin-top 2%
				
@media(min-width 470px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 80px
				
	.versionDetailRow
		.versionDetail
			margin-top 3%
			font-size 14px

		.goToDetailArrow
			margin-top 3%
				

@media(min-width 600px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 95px
				
	.versionDetailRow
		.versionDetail
			margin-top 4%

		.goToDetailArrow
			margin-top 4%


@media(min-width 768px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 77px
				
			.modelDetail
				.mInfoDetail
					.shareLogo
						padding-right 75px
						
						svg
							right 20px
					
				
	.versionDetailRow
		.versionDetail
			margin-top 2%
			font-size 16px
		
		.goToDetailArrow
			margin-top 2%
			font-size 18px
			
		&.active
			padding-left 5px
					
			
@media(min-width 1100px)
	.modelHeader
		.modelHeaderRow
			.versionsBrandImg
				background-size 90px
