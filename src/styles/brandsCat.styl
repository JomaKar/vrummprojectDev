@import 'colors'

.imgCatContBackg
	background-color $catBackGray
	box-shadow inset 0 25px 40px -24px black
	min-height 50vh
	
	.brandsSpace
		
		.brandCatRow
			height 120px
			background-color black
			box-shadow inset 0 -70px 100px -80px $brandRowShadow
			
			.brandItem
				height 96%
				width 20%
				float left
				display flex
				justify-content center
				padding-top 10px !important
				
				span.brandId, span.brandName
					display none
				
				.brandImgAnchor
					width 100%
					height 100%
					
					.brandItmImg
						background-size 70%
						cursor pointer
						height 100%
						margin 0 auto
						background-repeat no-repeat
						width 73%
			
			.startingText
				font-size 16px
				color $regTextColor
				text-align center
				width 100%
	
				
@media(min-width 992px)
	.imgCatContBackg
		.brandsSpace
			.brandCatRow
				.brandItem
					.brandImgAnchor
						.brandItmImg
							width 66%
						
@media(min-width 1200px)
	.imgCatContBackg
		.brandsSpace
			.brandCatRow
				.brandItem
					.brandImgAnchor
						.brandItmImg
							width 51%


#appStoreFooter
	&.catalogo
		border hidden
		
.logRedBtnCont
	&.catalogo
		border hidden
		border-bottom 5px solid $regActiveBtn
		height 215px
		
		.askLog
			margin-top 30px
			margin-bottom 15px
			
		.redirectLogBtn
			width 306px
			

.l-regInv
	&.catalogo
		margin 10px auto
		width 305px