@import 'colors'


#l-email
	background-color transparent !important

#l-passCont
	transition all linear 200
	
#recoverPassTxt, #subBtnRecTxt
	display none	

.errorLogin
	color red
	display none

.passRecover
	width 100%
	text-align center
	cursor pointer
	margin-top 21.5px
	font-size 12px
	color $regTextColor

.loginBtnCont
	display flex

.l-regInv
	text-align left
	color $regTextColor
	width 94%
	font-size 14px
	margin-left 10px
	
	&.scnTxt
		text-align center
		margin 10px 0

.passModalCont
	width 98.2vw
	height 100vh
	background-color rgba(10, 10, 10, .3)
	position fixed
	top 0
	left 0
	display none
	justify-content center
	z-index 1000
	
	.recoverPassModal
		width 80%
		height 350px
		margin-top 16vh
		background-color black
		text-align center
		border 0.5px solid $regTextColor
		border-radius 4px
		padding 4%
		overflow hidden
		box-sizing content-box
		display flex
		flex-direction row-reverse
		
		.closeModal
			cursor pointer
			font-size 14px
			color white
			position relative
			top -2px
			right -2px
			height 16px
		
		.modalTxtContainer
			.passRecTitles
				font-size 18px
				color white
				text-align left
				margin-bottom 20px
				margin-top 17px
			
			.recPassMdTxt
				text-align left
				color $regTextColor
				width 94%
				font-size 14px
				margin-left 0
				
				&:last-of-type
					margin-bottom 23px
					
			.resendPart
				height 60px
				border 1px solid $regTextColor
				border-radius 5px
				padding 10px
				display flex
				justify-content space-between
				cursor pointer
				
				.resendImg
					width 60px
					height 22px
					margin-right 13px
					margin-top 6px
				
				.recPassTxt
					text-align left
					color $regTextColor
					width 94%
					font-size 14px
					margin auto
			
	
