@import 'colors'


#l-email
	background-color transparent !important

#l-passCont
	transition all linear 200
	
#recoverPassTxt, #subBtnRecTxt
	display none	

.errorLogin
	color red
	display none

.passRecover
	width 100%
	text-align center
	cursor pointer
	margin-top 21.5px
	font-size 12px
	color $regTextColor

.l-regInv
	text-align left
	color $regTextColor
	width 94%
	font-size 14px
	margin-left 10px
	
	&.scnTxt
		text-align center
		margin 10px 0

.passModalCont
	width 98.2vw
	height 100vh
	background-color rgba(10, 10, 10, .3)
	position fixed
	top 0
	left 0
	display none
	justify-content center
	z-index 1000
	
	.recoverPassModal
		width 80%
		height 356px
		margin-top 16%
		background-color black
		text-align center
		border 0.5px solid $regTextColor
		padding 4%
		overflow hidden
		box-sizing content-box
		
		.closeModal
			position absolute
			right 8%
			cursor pointer
			font-size 16px
			color white
		
		.passRecTitles
			font-size 18px
			color white
			text-align left
			margin-bottom 20px
		
		.recPassMdTxt
			text-align left
			color $regTextColor
			width 94%
			font-size 14px
			
			&:last-of-type
				margin-bottom 20px
				
		.resendPart
			height 60px
			border 1px solid $regTextColor
			border-radius 5px
			padding 10px
			
			.recPassTxt
				text-align left
				color $regTextColor
				width 94%
				font-size 14px
				
				img
					width 40px
					height auto
			
	
@media(min-width 310px)
	.passModalCont
		.recoverPassModal
			height 319px
			
			.closeModal
				right 10%
				font-size 18px
				
@media(min-width 372px)
	.passModalCont
		.recoverPassModal
			height 280px			


@media(min-width 500px)
	.passModalCont
		.recoverPassModal
			width 50%
			height 332px
			
			.closeModal
				right 27%
				
@media(min-width 551px)
	.passModalCont
		.recoverPassModal
			height 295px			

@media(min-width 851px)
	.passModalCont
		.recoverPassModal
			height 269px
			
@media(min-width 1091px)
	.passModalCont
		.recoverPassModal
			height 238px			